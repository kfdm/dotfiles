#!/usr/bin/osascript
-- Shell Script to set the volume
-- Can be run with either a numeric value
-- or the strings 'max' or 'half'
on run(level)
	if level is equal to {"max"} then set level to 10
	if level is equal to {"half"} then set level to 5
	set volume level
	do shell script "echo 'Volume set to " & level & "'"
end run
